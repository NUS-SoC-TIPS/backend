{
  "name": "tips-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prisma:dev:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:dev:deploy": "dotenv -e .env.development -- prisma migrate deploy && prisma generate",
    "prisma:prod:deploy": "dotenv -e .env.production -- prisma migrate deploy && prisma generate",
    "db:dev:rm": "docker compose rm dev-db -s -f -v",
    "db:dev:up": "docker compose up dev-db -d",
    "db:dev:restart": "yarn db:dev:rm && yarn db:dev:up && sleep 1 && yarn prisma:dev:deploy",
    "prisma:test:deploy": "dotenv -e .env.test -- prisma migrate deploy && prisma generate",
    "db:test:rm": "docker compose rm test-db -s -f -v",
    "db:test:up": "docker compose up test-db -d",
    "db:test:restart": "yarn db:test:rm && yarn db:test:up && sleep 1 && yarn prisma:test:deploy",
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "dotenv -e .env.development -- nest start",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:debug": "dotenv -e .env.development -- nest start --debug --watch",
    "start:prod": "dotenv -e .env.production -- node dist/main",
    "lint": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" && eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "yarn db:test:restart && yarn test:src && yarn test:e2e",
    "test:ci": "yarn prisma:test:deploy && yarn test:src",
    "test:src": "dotenv -e .env.test -- jest --runInBand --detectOpenHandles",
    "test:e2e": "dotenv -e .env.test -- jest --config ./test/jest-e2e.json --runInBand --detectOpenHandles",
    "prepare": "node -e \"if(require('fs').existsSync('.git')){process.exit(1)}\" || husky install"
  },
  "dependencies": {
    "@nestjs/common": "^9.1.4",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.1.4",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.1.4",
    "@nestjs/platform-socket.io": "^9.1.4",
    "@nestjs/websockets": "^9.1.4",
    "@prisma/client": "^4.5.0",
    "agora-access-token": "^2.0.4",
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "firebase-admin": "^11.2.0",
    "helmet": "^6.0.0",
    "lib0": "^0.2.52",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "random-word-slugs": "^0.1.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.7",
    "y-protocols": "^1.0.5",
    "yjs": "^13.5.42"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@commitlint/cz-commitlint": "^17.1.2",
    "@nestjs/cli": "^9.1.4",
    "@nestjs/schematics": "^9.0.3",
    "@nestjs/testing": "^9.1.4",
    "@types/atob": "^2.1.2",
    "@types/btoa": "^1.2.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.2",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "commitizen": "^4.2.5",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.1",
    "jest": "^29.2.1",
    "jest-mock": "^29.2.1",
    "lint-staged": "^13.0.3",
    "markdownlint-cli": "^0.32.2",
    "pactum": "^3.2.2",
    "prettier": "^2.7.1",
    "prettier-plugin-prisma": "^4.4.0",
    "pretty-quick": "^3.1.3",
    "prisma": "^4.5.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "pretty-quick --staged",
      "eslint --fix"
    ],
    "**/*.md": [
      "markdownlint --fix"
    ]
  }
}
